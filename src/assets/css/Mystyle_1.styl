//全局styl
html
  font-size 16px
body
  background-image url("../images/bg.jpg")
*
  padding 0
  margin 0
@media screen and (max-width: 480px)
  html
    font-size 8px
    padding 5px
  *
    padding 0
    margin 0

#app
  weight 100%
  text-align  center
  //抗锯齿 文字清晰
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  #nav-bottom
    height 100%
    width 100%
  //空白的占位符
  .Non-existent>p
    color transparent
  #app_nav
    #app_nav_ul
      height 6rem
      margin auto
    .app_nav_li
      float left
      list-style none
      height 3rem
      //background-color black
      line-height 50px
      padding 1rem 1rem
      position:relative
    a,a:link
        color #000
        font-size 1.5rem
        text-decoration none
        text-align center
    //绿色三角下标
    a:after
      content ""
      width 0px
      height 0px
      border-right:0.6rem solid transparent
      border-left:0.6rem solid transparent
      border-bottom:0.6rem solid transparent
      position: absolute
      transform scale(0,0)
      bottom: 0
      left: 45%
      transition: all .3s
    a:hover:after
      left: 45%
      width 0
      transform scale(1,1)
      border-right:0.6rem solid transparent
      border-left:0.6rem solid transparent
      border-bottom:0.6rem solid #fff
      //background #2bff64
    a:hover,a:focus
      //font-weight bold
      color #fff
      text-shadow 2px 2px #000
      transition: all .2s
      //height: 0px;
    a:focus:after,a:active:after
      left: 45%
      width 0
      transform scale(1,1)
      border-right:0.6rem solid transparent
      border-left:0.6rem solid transparent
      border-bottom:0.6rem solid #fff

